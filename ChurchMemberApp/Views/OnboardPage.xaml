<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  xmlns:controls="clr-namespace:FormsControls.Base;assembly=FormsControls.Base" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ChurchMemberApp.Views.OnboardPage" BackgroundImageSource="start.png" NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <Grid>
            <BoxView BackgroundColor="#000" Opacity="0.7" />
            <StackLayout VerticalOptions="Center" Margin="30,0,30,10" HorizontalOptions="Center">
                <Label Text="Welcome To Church" TextColor="White" FontSize="36" />

                <Label Text="Carry church wherever you go, see announcement, post testimonies, prayer request and lots more" FontSize="14" FontFamily="LightFont" TextColor="White" />

                <BoxView HeightRequest="200" BackgroundColor="Transparent" />
                <Button FontFamily="MediumFont" Style="{StaticResource OnboardBtn}" Margin="0,20,0,10" VerticalOptions="End" Text="GET STARTED" x:Name="start" Clicked="start_Clicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
