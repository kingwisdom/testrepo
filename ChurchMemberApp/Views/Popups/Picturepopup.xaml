<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage  xmlns:pages="http://rotorgames.com" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChurchMemberApp.Views.Popups.Picturepopup">
    
        <StackLayout HeightRequest="300" WidthRequest="300" BackgroundColor="White" Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="{Binding Picture}" x:Name="image" HeightRequest="250" Aspect="AspectFill"/>
            <ImageButton BackgroundColor="Transparent" Source="photograph"  Command="{Binding Takepicture}" VerticalOptions="End"/>
        </StackLayout>
    
</pages:PopupPage>